{% extends 'base.html.twig' %}

{% block title %}EspacePhotos index{% endblock %}

{% block body %}
    <h1>EspacePhotos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for espace_photo in espace_photos %}
            <tr>
                <td>{{ espace_photo.id }}</td>
                <td>{{ espace_photo.description }}</td>
                <td>{{ espace_photo.image }}</td>
                <td>
                    <a href="{{ path('espace_photos_show', {'id': espace_photo.id}) }}">show</a>
